<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/4.0.0/css/jasny-bootstrap.min.css">
    <style>
        main.container{
            margin-top: 4rem!important;
        }
    </style>
</head>
<body>
    <nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas bg-dark " role="navigation">
        <ul class="nav  navmenu-nav flex-column">
            <li class="nav-item"><a class="nav-link text-white" href="#">Home</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#">Link1</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="#">Link2</a></li>
        </ul>
    </nav>

    <div class="canvas">
        <header class="navbar navbar-dark bg-dark fixed-top">
            <button class="navbar-toggler" type="button" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
                <span class="navbar-toggler-icon"></span>
            </button>
        </header>
        <main class="container">
            @RenderBody()
        </main>
    </div>
    <footer>
        <p>&copy; Test</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/4.0.0/js/jasny-bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
